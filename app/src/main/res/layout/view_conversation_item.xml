<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="@dimen/radius_size"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="@dimen/radius_size"
        android:layout_marginEnd="@dimen/radius_size"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:id="@+id/img_user_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/people_head"
                />

        <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/img_user_head"
                android:layout_toRightOf="@id/img_user_head"
                android:text="DJC"
                />

        <TextView
                android:id="@+id/tv_lastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_user_head"
                android:layout_alignBottom="@id/img_user_head"
                android:textSize="14sp"
                android:text="Hello"
                android:textColor="@color/white_gray"
                />

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white_gray"
                android:text="17:55"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />

        <TextView
                android:id="@+id/tv_unreadCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/img_user_head"
                android:layout_alignParentRight="true"
                android:text="10"
                android:background="@drawable/bg_unread_count"

                />
    </RelativeLayout>

</android.support.v7.widget.CardView>